{
	"extends": "@verifio/tsconfig/base.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"composite": false,
		"declaration": false,
		"declarationMap": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
