{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Next.js",
	"extends": "./base.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowJs": true,
		"jsx": "preserve",
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@verifio/db": ["../../packages/db/src/*"],
			"@verifio/cache": ["../../packages/cache/src/*"],
			"@verifio/ui": ["../../packages/ui/src/*"],
			"@verifio/auth": ["../../packages/auth/src/*"],
			"@be/domain": ["../../apps/backend/domain/src/*"],
			"@fe/dashboard": ["../../apps/frontend/dashboard/src/*"],
			"@fe/web": ["../../apps/frontend/web/src/*"],
			"@fe/docs": ["../../apps/frontend/docs/src/*"]
		}
	}
}
